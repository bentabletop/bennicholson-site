---
import BaseLayout from "../layouts/BaseLayout.astro";

const videos = [
  {
    title: "Video essay: Power at Your Fingertips",
    date: "2020",
    url: "https://vimeo.com/423548251?fl=pl&fe=ti",
    desc: "A Videographic ‘The Go-Between’ PechaKucha.",
  },
  {
    title: "Video essay: Man's Dominion",
    date: "2020",
    url: "https://vimeo.com/423766481?fl=pl&fe=ti",
    desc: "An epigraphic video essay about Mani Kaul's Uski Roti.",
  },
  {
    title: "the tonic of battersea park",
    date: "2023",
    url: "https://vimeo.com/796997574",
    desc: "What would Henry David Thoreau have made of London's Battersea Park? This combination of an AI script and the procedurally-generated landscapes of Proteus seeks to find out, kind of.",
  },
];

// sort newest first
videos.sort((a, b) => Number(b.date) - Number(a.date));
---


<BaseLayout title="Videos · Ben Nicholson" description="Video essays" currentPath="/videos">
<section class="hero">
<div class="kicker"><span class="dot" aria-hidden="true"></span><span>Videos</span></div>
<h1>Video essays</h1>
<p class="lede">A small collection of video work.</p>
</section>


<section class="section">
<div class="list">
{videos.map((v) => (
<div class="row">
<div class="meta">{v.date}</div>
<div>
<div class="title"><a href={v.url} target="_blank" rel="noopener">{v.title}</a></div>
<div class="desc">{v.desc}</div>
</div>
</div>
))}
</div>
</section>
</BaseLayout>