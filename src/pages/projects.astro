---
import BaseLayout from "../layouts/BaseLayout.astro";


const projects = [
{ title: "Alpha Film Festival", url: "/projects/alpha", desc: "The world's first metaverse film festival, taking place in 2023." },
{ title: "SOJOURNS", url: "/projects/sojourns", desc: "A zine about not watching films at film festivals." },
];
---


<BaseLayout title="Projects Â· Ben Nicholson" description="Projects" currentPath="/projects">
<section class="hero">
<div class="kicker"><span class="dot" aria-hidden="true"></span><span>Projects</span></div>
<h1>Projects</h1>
<p class="lede">Festivals, collaborations, and other work.</p>
</section>


<section class="section">
<div class="list">
{projects.map((p) => (
<div class="row">
<div class="meta">Project</div>
<div>
<div class="title"><a href={p.url}>{p.title}</a></div>
<div class="desc">{p.desc}</div>
</div>
</div>
))}
</div>
</section>
</BaseLayout>